#
# Makefile for building the classanalyzer tool
#
# ClassAnalyzer depends on the com.sun.tools.classfile API.
# Synchronized change to this tool is needed to make when there is
# any API change to the classfile library.
#
# A non-forest build (only jdk repository) may fail if the classfile
# API change is not yet in an imported JDK.
#

BUILDDIR = ../..
PACKAGE = com.sun.classanalyzer
include $(BUILDDIR)/common/Defs.gmk

CLASSANALYZER_JAR_FILE = $(BUILDTOOLJARDIR)/classanalyzer.jar
CLASSANALYZER_SOURCE = src

PKGDIR = com/sun/classanalyzer
MAIN   = $(PKGDIR)/ClassAnalyzer.java
MAINCLASS   = $(subst /,.,$(MAIN:%.java=%))
MAIN_SOURCE_FILE = $(CLASSANALYZER_SOURCE)/$(MAIN)
MANIFEST_FILE    = $(BUILDTOOLCLASSDIR)/classanalyzer_manifest.mf

# Location of the output modules.list, <module>.classlist
# and other output files generated by the class analyzer tool.
#
all: classes $(CLASSANALYZER_JAR_FILE)

# Rules to compile class analyzer
CLASSDESTDIR = $(BUILDTOOLCLASSDIR)
SOURCEPATH = $(CLASSANALYZER_SOURCE)$(CLASSPATH_SEPARATOR)$(VPATH.java)
FILES_java := $(shell $(CD) $(CLASSANALYZER_SOURCE) \
    && $(FIND) $(PKGDIR) -name '*.java' -print)

include $(BUILDDIR)/common/Classes.gmk

# Rule to add the java file for compilation
# Remove manifest to force creating the classanalyzer.jar
$(CLASSDESTDIR)/%.class: $(CLASSANALYZER_SOURCE)/%.java
	@$(add-java-file)
	@$(RM) $(MANIFEST_FILE)

$(MANIFEST_FILE): $(MAIN_SOURCE_FILE)
	@$(prep-target)
	$(ECHO) "Main-Class: $(MAINCLASS)" > $@

$(CLASSANALYZER_JAR_FILE): $(MANIFEST_FILE)
	@$(prep-target)
	$(BOOT_JAR_CMD) cfm $@ $(MANIFEST_FILE) \
	    -C $(BUILDTOOLCLASSDIR) \
	    $(PKGDIR) $(BOOT_JAR_JFLAGS) || $(RM) $@
	@$(java-vm-cleanup)

clean clobber::
	@$(RM) -rf $(BUILDTOOLCLASSDIR)/$(PKGDIR)
	@$(RM) $(MANIFEST_FILE)
	@$(RM) $(CLASSANALYZER_JAR_FILE)

.PHONY: gen-classlist
